<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">
	<property name="LOGS_ABSOLUTE_PATH" value="c:/dn_logs" />
	<property name="LOG_PATTERN"
		value="%-5level %d{yyyy-MM-dd HH:mm:ss}[%thread] %logger[%method:%line] - %msg%n" />

	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<withJansi>true</withJansi>
<!-- 		<encoder> -->
<!-- 			<pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%-5level] [%logger{36}] - %msg%n</pattern> -->
<!-- 		</encoder> -->
			<encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
				<charset>UTF-8</charset>
				<layout class="main.LogBackLayout"></layout>
			</encoder>
	</appender>
	
	<appender name="user" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOGS_ABSOLUTE_PATH}/logdn.csv</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			
			<fileNamePattern >${LOGS_ABSOLUTE_PATH}/logdn.%d{yyyy-MM-dd HH}.%i.csv
			</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<!-- or whenever the file size reaches 100MB -->
				<maxFileSize>100MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
		<ImmediateFlush>true</ImmediateFlush>
		<encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
			<charset>UTF-8</charset>
			<layout class="main.LogBackLayout"></layout>
		</encoder>
	</appender>
<!-- 	같은 로그만 나오게 할 수 없나  --> 
	<appender name="main" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOGS_ABSOLUTE_PATH}/logMain.csv</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			
			<fileNamePattern >${LOGS_ABSOLUTE_PATH}/logMain.%d{yyyy-MM-dd HH}.%i.csv
			</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				or whenever the file size reaches 100MB
				<maxFileSize>100MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
		<ImmediateFlush>true</ImmediateFlush>
		<encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
			<charset>UTF-8</charset>
			<layout class="main.LogBackLayout"></layout>
		</encoder>
	</appender>



<!-- 	<logger name="src.Main" level="debug" additivity="false"> -->
<!-- 		<appender-ref ref="user" /> -->
<!-- 	</logger> -->
	<logger name="src.Main" level="info" additivity="false">
		<appender-ref ref="ROLLING" />
	</logger>

	<logger name="src.Main.Child" additivity="true" />

	<root level="info">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="user" />
<!-- 		<appender-ref ref="main" /> -->
	</root>
	<root level="error">
		<appender-ref ref="CONSOLE" />
<!-- 		<appender-ref ref="ROLLING" /> -->
	</root>
	<root level="trace">
		<appender-ref ref="CONSOLE" />
<!-- 		<appender-ref ref="ROLLING" /> -->
	</root>
	<root level="warn">
		<appender-ref ref="CONSOLE" />
<!-- 		<appender-ref ref="ROLLING" /> -->
	</root>
	<root level="debug">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="main" />
	</root>





</configuration>